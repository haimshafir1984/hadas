generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Employee {
  id           Int       @id @default(autoincrement())
  name         String
  employeeCode String    @unique
  hourlyRate   Float
  salesTarget  Float

  sales        Sale[]
  shifts       Shift[]
  timeEntries  TimeEntry[]
  dailyTasks   DailyTask[]

  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt
}

model Sale {
  id         Int       @id @default(autoincrement())
  employee   Employee  @relation(fields: [employeeId], references: [id])
  employeeId Int
  amount     Float
  bonusRate  Float     @default(0)
  date       DateTime  @default(now())
}

model Shift {
  id         Int       @id @default(autoincrement())
  employee   Employee  @relation(fields: [employeeId], references: [id])
  employeeId Int
  date       DateTime
  hours      Float
}

model Product {
  id          Int                     @id @default(autoincrement())
  name        String
  sku         String                  @unique
  barcode     String?                 @unique
  department  String                  @default("לא משויך")
  model       String                  @default("לא משויך")
  size        String                  @default("כללי")
  maxStock    Int                     // initial/maximum reference level for 10% logic
  currentStock Int                    @default(0)
  supplierId  Int?
  supplier    Supplier?               @relation(fields: [supplierId], references: [id])

  transactions InventoryTransaction[]

  createdAt   DateTime                @default(now())
  updatedAt   DateTime                @updatedAt
}

model InventoryTransaction {
  id        Int      @id @default(autoincrement())
  product   Product  @relation(fields: [productId], references: [id])
  productId Int
  quantity  Int
  type      String
  createdAt DateTime @default(now())
}

model Customer {
  id        Int      @id @default(autoincrement())
  name      String
  phone     String
  email     String   @unique
  totalSpend Float   @default(0)
  lastVisit  DateTime?
  birthDate DateTime?
  joinedAt  DateTime @default(now())
}

model DailyTarget {
  id           Int      @id @default(autoincrement())
  date         DateTime @unique
  targetAmount Float
  bonusReward  Float
  createdAt    DateTime @default(now())
}

model Supplier {
  id            Int               @id @default(autoincrement())
  name          String
  contactPerson String
  phone         String
  products      Product[]
  invoices      SupplierInvoice[]
  createdAt     DateTime          @default(now())
}

model SupplierInvoice {
  id              Int      @id @default(autoincrement())
  supplier        Supplier @relation(fields: [supplierId], references: [id])
  supplierId      Int
  invoiceDate     DateTime
  totalAmount     Float
  numberOfPayments Int
  paymentDates    String
  invoiceImage    String?
  createdAt       DateTime @default(now())

  items           SupplierInvoiceItem[]
}

model SupplierInvoiceItem {
  id                Int      @id @default(autoincrement())
  supplierInvoice   SupplierInvoice @relation(fields: [supplierInvoiceId], references: [id])
  supplierInvoiceId Int
  productId         Int?
  productName       String
  quantity          Int
  unitCost          Float
  createdAt         DateTime @default(now())
}

model TimeEntry {
  id         Int      @id @default(autoincrement())
  employee   Employee @relation(fields: [employeeId], references: [id])
  employeeId Int
  clockIn    DateTime
  clockOut   DateTime?
  createdAt  DateTime @default(now())
}

model DailyTask {
  id         Int      @id @default(autoincrement())
  employee   Employee @relation(fields: [employeeId], references: [id])
  employeeId Int
  date       DateTime
  label      String
  completed  Boolean  @default(false)
}
